{
  "name": "remix-gql-tailwind",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles",
    "build:css:prod": "npm run build:css -- --env production",
    "dev": "concurrently -c magenta,cyan \"npm:dev:*\"",
    "build:remix": "remix build",
    "dev:arc": "node ./dev sandbox",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix watch",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test dev http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "mock": "concurrently -c magenta,cyan \"npm:mock:*\"",
    "mock:remix": "node -r dotenv/config --require ./mocks ./node_modules/@remix-run/dev/cli.js",
    "mock:css": "npm run build:css -- --w",
    "start": "remix-serve build",
    "storybook": "concurrently -n css,storybook -c cyan,magenta \"npm run dev:css\" \"start-storybook -p 6006\"",
    "build-storybook": "build-storybook"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/server/index.js",
    "/public/build"
  ],
  "dependencies": {
    "@architect/architect": "^10.3.3",
    "@architect/functions": "^5.1.0",
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@remix-run/architect": "^1.6.1",
    "@remix-run/node": "^1.6.1",
    "@remix-run/react": "^1.6.1",
    "@remix-run/serve": "^1.6.1",
    "bcryptjs": "2.4.3",
    "classnames": "^2.3.1",
    "cuid": "^2.1.8",
    "date-fns": "^2.28.0",
    "dotenv": "^10.0.0",
    "graphql-request": "^3.7.0",
    "mrm": "2",
    "prism-react-renderer": "^1.3.1",
    "react": "^17.0.2",
    "react-content-loader": "^6.1.0",
    "react-dom": "^17.0.2",
    "react-markdown": "5.0.3",
    "remix-auth": "^3.2.1",
    "remix-auth-github": "^1.0.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@faker-js/faker": "^6.3.1",
    "@remix-run/dev": "^1.6.1",
    "@remix-run/eslint-config": "^1.6.1",
    "@storybook/addon-actions": "^6.5.0-alpha.4",
    "@storybook/addon-essentials": "^6.5.0-alpha.4",
    "@storybook/addon-links": "^6.5.0-alpha.4",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.5.0-alpha.4",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/architect__functions": "^3.13.6",
    "@types/bcryptjs": "2.4.2",
    "@types/eslint": "^8.4.2",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.1",
    "babel-loader": "^8.2.3",
    "c8": "^7.11.3",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "cypress": "^9.6.1",
    "esbuild": "^0.14.39",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.5.5",
    "happy-dom": "^2.55.0",
    "mock-aws-s3": "^4.0.2",
    "msw": "^0.40.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "msw-storybook-addon": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "start-server-and-test": "^1.14.0",
    "storybook-builder-vite": "^0.1.12",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "vite": "^2.7.6",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.12.8"
  },
  "lint-staged": {
    "app/**/*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
